@page
@model IndexModel
@{
    ViewData["Title"] = "ToDoList";
}

<section>
    <h1>ToDoList</h1>

    <div class="main-grid">
        <div class="card" id="listCard">
            <h2>Tasks</h2>
            <ul id="todoList"></ul>
        </div>


        <div class="card" id="formCard">
            <h2 id="formTitle">Create task</h2>
            <form id="todoForm">
                <input type="hidden" id="editId" />
                <label>Titl<input id="title" required /></label>
                <label>Descripcion<textarea id="description"></textarea></label>
                <label for="category">Category</label>
                <select id="category" name="category">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category">@category</option>
                    }
                </select>
                <div class="form-buttons">
                    <button type="submit" class="btn-save">Save</button>
                    <button type="button" class="btn-cancel">Cancel</button>
                </div>
            </form>


            <hr />


            <h3>Add progression</h3>
            <form id="progressForm">
                <label>ID task<input id="progId" type="number" /></label>
                <label>Date<input id="progDate" type="datetime-local" /></label>
                <label>Percent<input id="progPercent" type="number" min="1" max="100" /></label>
                <div class="form-buttons">
                    <button type="submit" class="btn-save">Save</button>
                    <button type="button" class="btn-cancel">Cancel</button>
                </div>
            </form>
        </div>
    </div>


</section>


@section Scripts {
    <script src="/js/site.js"></script>
}
